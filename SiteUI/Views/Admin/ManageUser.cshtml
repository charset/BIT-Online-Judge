@model BITOJ.SiteUI.Models.UserProfileModel
@{ 
    ViewBag.Title = "BITOJ - User Management";
    ViewData.Add("AccessGroup", BITOJ.Core.UserGroup.Administrators);
}

<div class="jumbotron">
    <h1>User Management</h1>
    <p class="sup">
        Manage all users here.
    </p>
</div>

<div class="row">
    <div class="col-lg-12">
        <form class="form-inline" method="post">
            <div class="form-group">
                <label for="user">Username: </label>
                <input type="text" class="form-control" id="user" name="username" />
            </div>
            <div class="form-group">
                <label for="organization">Organization: </label>
                <input type="text" class="form-control" id="organization" name="organization" />
            </div>
            <div class="form-group">
                <label for="usergroup">User group: </label>
                <select class="form-control" id="usergroup" name="usergroup">
                    <option>(No requirement)</option>
                    <option>Administrator</option>
                    <option>Insider</option>
                    <option>Standard</option>
                    <option>Guest</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Query users</button>
        </form>
    </div>
</div>
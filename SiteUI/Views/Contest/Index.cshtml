@using BITOJ.Core
@using BITOJ.Core.Convert
@using BITOJ.Core.Authorization
@using BITOJ.SiteUI.Models
@model ContestModel

<div class="jumbotron">
    <h1>Contests</h1>
    <p class="sup">
        View all contests on BIT Online Judge system.
    </p>
</div>

<div class="row">
    <div class="col-lg-3">
        @if (UserSession.IsAuthorized(Session) &&
             UserAuthorization.CheckAccessRights(UserGroup.Insiders, UserSession.GetUserGroup(Session)))
        {
            <div class="hidden-xs hidden-sm btn-group-vertical" style="display: block;">
                <a href="~/Contest/Add" role="button" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus"></span>
                    Add a new contest
                </a>
            </div>

            <hr class="hidden-xs hidden-sm" />
        }

        <div class="list-group">
            @{
                string[] navAnchorClasses = new string[4];
                for (int i = 0; i < 4; ++i)
                {
                    navAnchorClasses[i] = "list-group-item";
                }
                navAnchorClasses[(int)Model.Catalog] += " active";
            }

            <a class="@navAnchorClasses[0]" href="~/Archieve">
                <h5 class="list-group-item-heading">All Contests</h5>
            </a>
            <a class="@navAnchorClasses[1]" href="~/Archieve">
                <h5 class="list-group-item-heading">Sheduled Contests</h5>
            </a>
            <a class="@navAnchorClasses[2]" href="~/Archieve">
                <h5 class="list-group-item-heading">Running Contests</h5>
            </a>
            <a class="@navAnchorClasses[3]" href="~/Archieve">
                <h5 class="list-group-item-heading">Ended Contests</h5>
            </a>
        </div>

        <hr />

        <div class="panel panel-info" id="queryPanel">
            <div class="text-center panel-heading" id="queryHeading">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#queryPanel" href="#queryForm"
                       aria-expanded="true" aria-controls="queryForm">
                        <strong>Query Contests</strong>
                    </a>
                </h4>
            </div>
            <div class="panel-collapse collase in" id="queryForm" aria-labelledby="queryHeading">
                <div class="panel-body">
                    <form role="search" action="~/Contest/Query">
                        <div class="form-group">
                            <label class="control-label" for="Title">Title</label>
                            <input type="text" class="form-control" id="Title" name="Title" />
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Holder">Holder</label>
                            <input type="text" class="form-control" id="Holder" name="Holder" />
                        </div>

                        <hr />

                        <button type="submit" class="btn btn-info btn-block">Query</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        @{
            if (Model.Pages > 0)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (int page = 1; page <= Model.Pages; ++page)
                        {
                            if (page == Model.CurrentPage)
                            {
                                <li class="active">
                                    <a href="javascript:void(0);">
                                        @page
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="@string.Format("/Contest?page={0}", page)">@page</a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
            }
            else
            {
                <div class="alert alert-info">
                    <span class="glyphicon glyphicon-exclamation-sign"></span>
                    <p>There are no contests yet.</p>
                </div>
            }
        }

        <div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Part.</th>
                        <th>Calendar</th>
                        <th>Status</th>
                        <th>Holder</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model != null)
                        {
                            foreach (ContestBriefModel info in Model.Contests)
                            {
                                string contestUrl = string.Format("/Contest/ShowContest?id={0}", info.ContestId);
                                <tr>
                                    <td><a href="@contestUrl"><strong>@info.Title</strong></a></td>
                                    <td>@ContestAuthorizationModeConvert.ConvertToString(info.AuthorizationMode)</td>
                                    <td>@ContestParticipationModeConvert.ConvertToString(info.ParticipationMode)</td>
                                    <td>
                                        <a tabindex="0" class="btn btn-default" role="button" data-toggle="popover"
                                           data-trigger="focus" title="Contest calendar"
                                           data-content="@Html.Encode(info.GetCalenderString())"
                                           data-html="true">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </a>
                                    </td>
                                    <td>@ContestStatusConvert.ConvertToString(info.Status)</td>
                                    <td>@info.Creator</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@using BITOJ.Core
@using BITOJ.Core.Authorization
@using BITOJ.SiteUI.Models
@model ContestModel
@{ 
    ViewBag.Title = "BITOJ - Contests";
}

<div class="jumbotron">
    <h1>Contests</h1>
    <p class="sup">
        View all contests on BIT Online Judge system.
    </p>
</div>

<div class="row">
    <div class="col-lg-3">
        @if (UserSession.IsAuthorized(Session) &&
             UserAuthorization.CheckAccessRights(UserGroup.Insiders, UserSession.GetUserGroup(Session)))
        {
            <div class="hidden-xs hidden-sm btn-group-vertical" style="display: block;">
                <a href="~/Contest/Add" role="button" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus"></span>
                    Add a new contest
                </a>
            </div>

            <hr class="hidden-xs hidden-sm" />
        }

        <div class="list-group">
            @{
                string[] navAnchorClasses = new string[4];
                for (int i = 0; i < 4; ++i)
                {
                    navAnchorClasses[i] = "list-group-item";
                }
                navAnchorClasses[(int)Model.Catalog] += " active";
            }

            <a class="@navAnchorClasses[0]" href="~/Contest?catalog=0">
                <h5 class="list-group-item-heading">All Contests</h5>
            </a>
            <a class="@navAnchorClasses[1]" href="~/Contest?catalog=1">
                <h5 class="list-group-item-heading">Sheduled Contests</h5>
            </a>
            <a class="@navAnchorClasses[2]" href="~/Contest?catalog=2">
                <h5 class="list-group-item-heading">Running Contests</h5>
            </a>
            <a class="@navAnchorClasses[3]" href="~/Contest?catalog=3">
                <h5 class="list-group-item-heading">Ended Contests</h5>
            </a>
        </div>

        <hr />

        <div class="panel panel-info" id="queryPanel">
            <div class="text-center panel-heading" id="queryHeading">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#queryPanel" href="#queryFormDiv"
                       aria-expanded="true" aria-controls="queryFormDiv">
                        <strong>Query Contests</strong>
                    </a>
                </h4>
            </div>
            <div class="panel-collapse collase in" id="queryFormDiv" aria-labelledby="queryHeading">
                <div class="panel-body">
                    <form role="search" method="post" action="@string.Format("/Contest/Query?catalog={0}", (int)Model.Catalog)">
                        <div class="form-group">
                            <label class="control-label" for="Title">Title</label>
                            <input type="text" class="form-control" id="Title" name="Title" 
                                   value="@(Request.QueryString["title"] ?? string.Empty)"/>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Creator">Creator</label>
                            <input type="text" class="form-control" id="Creator" name="Creator" 
                                   value="@(Request.QueryString["creator"] ?? string.Empty)"/>
                        </div>

                        <hr />

                        <button type="submit" class="btn btn-info btn-block">Query</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        @{
            if (Model.Pages > 0)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (int page = 1; page <= Model.Pages; ++page)
                        {
                            if (page == Model.CurrentPage)
                            {
                                <li class="active">
                                    <a href="javascript:void(0);">
                                        @page
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="@string.Format("/Contest?page={0}", page)">@page</a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
            }
            else
            {
                <div class="alert alert-info">
                    <p>There are no contests yet.</p>
                </div>
            }
        }

        @Html.Partial("~/Views/Shared/ContestList.cshtml", Model.Contests)
    </div>
</div>

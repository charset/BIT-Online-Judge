@using BITOJ.Core.Authorization
@{ 
    ViewBag.Title = "BITOJ - Contest authorization";
}
<div class="jumbotron">
    <h1>Contest authorization</h1>

    <div class="row">
        <div class="col-lg-6">
            <p class="sup">
                This contest needs password authorization.
                Please enter the password given by the creator of the contest to continue.
            </p>
        </div>
        <div class="col-lg-6">
            @if ((bool?)ViewBag.PasswordError ?? false)
            {
                <div class="alert alert-danger" role="alert">
                    <p>The password is incorrect.</p>
                </div>
            }

            @if ((bool?)ViewBag.ParticipantError ?? false)
            {
                <div class="alert alert-danger" role="alert">
                    <p>Invalid participant.</p>
                </div>
            }

            <form method="post">
                <div class="form-group">
                    <label for="Password" class="control-label sr-only">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password"
                            placeholder="Enter contest password..." />
                </div>
                <div class="form-group">
                    <label for="Participant">Participant</label>
                    <select class="form-control" id="Participant" name="Participant">
                    </select>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100px;">
                    <span class="glyphicon glyphicon-ok"></span>
                    Confirm
                </button>
            </form>
        </div>
    </div>
</div>

<input type="hidden" id="contestIdFeed" value="@Request.QueryString["id"]"/>
<input type="hidden" id="usernameFeed" value="@UserSession.GetUsername(Session)"/>

@section Scripts {
    <script src="~/Scripts/Contests/verify.js" type="text/javascript"></script>    
}

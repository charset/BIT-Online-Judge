@using BITOJ.Core
@using BITOJ.Core.Authorization
@using BITOJ.SiteUI.Models
@model UserProfileModel
@{
    ViewBag.Title = "BITOJ - " + Model.Username;

    string headClass = (Model.Sex == UserSex.Female)
        ? "jumbotron profile-head-box profile-head-box-female"
        : "jumbotron profile-head-box profile-head-box-male";
}

<div class="@headClass">
    <h1>
        @Model.Username
        @if (!string.IsNullOrEmpty(Model.Organization))
        {
            <small>from @Model.Organization</small>
        }
    </h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
                <a href="#team" aria-controls="team" role="tab" data-toggle="tab">Teams</a>
            </li>
            <li role="presentation">
                <a href="#submissions" aria-controls="submissions" role="tab" data-toggle="tab">Submissions</a>
            </li>
            
            @if (UserSession.IsAuthorized(Session) &&
                 string.Compare(UserSession.GetUsername(Session), Model.Username, false) == 0)
            {
                <li role="presentation">
                    <a href="#password" aria-controls="password" role="tab" data-toggle="tab">Password</a>
                </li>
            }
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="team">
                @if (UserSession.IsAuthorized(Session) &&
                     string.Compare(UserSession.GetUsername(Session), Model.Username, false) == 0)
                {
                    <div class="row">
                        <div class="col-lg-3">
                            <a class="btn btn-success" href="javascript:void(0);" style="margin-top: 15px; margin-bottom: 15px;">
                                <span class="glyphicon glyphicon-plus"></span>
                                Create a new team
                            </a>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-lg-4">
                        <div class="card-box card-box-default">
                            <h3>Team name here.</h3>
                            <p><span class="glyphicon glyphicon-user"></span> &times;3</p>
                        </div>
                    </div>
                </div>
            </div>

            <div role="tabpanel" class="tab-pane" id="submissions">

            </div>

            @if (UserSession.IsAuthorized(Session) &&
                 string.Compare(UserSession.GetUsername(Session), Model.Username, false) == 0)
            {
                <div role="tabpanel" class="tab-pane" id="password">
                    <h3>Change password</h3>
                    <form class="form-inline">
                        <div class="form-group">
                            <label for="old" class="sr-only">Old password</label>
                            <input type="password" class="form-control" placeholder="Username"/>
                        </div>
                        <div class="form-group">
                            <label for="new" class="sr-only">New password</label>
                            <input type="password" class="form-control" placeholder="New password"/>
                        </div>
                        <div class="form-group">
                            <label for="new" class="sr-only">Confirm new password</label>
                            <input type="password" class="form-control" placeholder="Confirm new password"/>
                        </div>
                        <button type="submit" class="btn btn-warning">Change password</button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>